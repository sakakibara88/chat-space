
.main-caht__caht-space__massge__name-time{data: {message: {id: message.id}}}
  .main-caht__caht-space__massge__name-time__name
    = message.user.name
  .main-caht__caht-space__massge__name-time__time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main-caht__caht-space__massge__text
  - if message.content.present?
    %p.lower-message__content
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?