.side-ber
  .side-ber__user-name
    .side-ber__user-name__top-items
      .side-ber__user-name__top-items__name
        = current_user.name
      .side-ber__user-name__top-items__icons
        = link_to new_group_path do
          = icon('fa', 'edit',  class: "side-ber__user-name__top-items__icons__btn--icon")
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog',  class: "side-ber__user-name__top-items__icons__btn--icon")

  .side-ber__group-list
    - current_user.groups.each do |group|
      .side-ber__group-list__group
        =link_to group_messages_path(group), class: "side-ber__group-list__group--link" do
          .side-ber__group-list__group__name
            = group.name
          .side-ber__group-list__group__message
            = group.show_last_message

